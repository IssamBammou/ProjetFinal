@model GestionEcole.Models.Matiere

@{
    ViewBag.Title = "Details";

    var LesCours = ViewBag.lstCoursInMatiere;
}

<h2>
    @ViewBag.Title
    <a class="btn btn-default" href="/Matiere/Edit?id=@Model.MatiereId"><span class="glyphicon glyphicon-pencil"></span></a>
</h2>

<div class="col-xs-8 col-xs-offset-2">
    <div class="list-group">
        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.Titre)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.Titre)</p>
        </div>

        <div class="list-group-item">
            <h4 class="list-group-item-heading">@Html.DisplayNameFor(model => model.Description)</h4>
            <p class="list-group-item-text">@Html.DisplayFor(model => model.Description)</p>
        </div>
    </div>
</div>

@if (LesCours !=null)
{ 

<div class="col-xs-10 col-xs-offset-1">

    <table class="table table-responsive table-striped">
        <thead>
            <tr>
        
                <th>Les cours enseignees </th>       
           
          </tr>
        <tr>
            <th>
                Date Debut
            </th>

            <th>
                Date fin
            </th>

            <th>
                Description
            </th>
            <th>

            </th>
        </tr>
        </thead>
        <tbody>
            @foreach (var item in LesCours)
            {
                <tr>
                    <td>
                        @item.DateDebut
                    </td>
                    <td>
                        @item.DateFin
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        @Html.ActionLink("Liste Etudiants", "AfficheEtudiantsCours", "Cours", new { coursId = item.CoursId }, new { @class = "btn btn-info" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div> 
}

<div class="col-xs-12">
    <a class="btn btn-danger" href="/Matiere"><span class="glyphicon glyphicon-arrow-left"></span></a>
</div>